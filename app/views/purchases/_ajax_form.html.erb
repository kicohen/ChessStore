<br>
<%= simple_form_for @purchase, remote: true, html: { class: 'form-horizontal', multipart: true } do |f| %>
  <fieldset>
    <%= f.input :item_id, :as => :hidden, input_html: {value: @item.id} %>
    <div class="form-group row">
    <label class="col-form-label col-2">Quantity: </label>
    <div class="col-2">
    <%= f.input :quantity, input_html: {class: "form-control"}, label: false, wrapper: false %>
    </div>
    <div class="col-3">
      <%= f.submit nil, :class => 'btn btn-success' %>
    </div>
    </div>
  </fieldset>
<% end %>