<div>
  <div>
    <h3><%= @user.name %></h3>
  </div>
</div>

<p>
  <b>Email</b>: <%= @user.email %>
</p>

<p>
  <b>Phone</b>: <%= @user.phone.nil? ? 'N/A' : number_to_phone(@user.phone) %>
</p>

<p>
  <b>Username</b>: <%= @user.username %>
</p>

<p>
  <b>Role</b>: <%= @user.role %>
</p>

<p>
  <b>Active</b>: <%= @user.active %>
</p>
